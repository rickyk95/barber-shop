      $('document').ready(function(){


                $('body').scrollspy({target:'.navbar'})

                $('.navbar a').on('click',function(e){

                    
                    if(this.hash !== ' '){

                      e.preventDefault()

                      var hash = this.hash

                      $('html,body').animate({
                        scrollTop: $(hash).offset().top},900,function(){

                          window.location.hash = hash
                        })

                    }

                })
                
              

                 $('#inner h3, #inner h4').hide()

